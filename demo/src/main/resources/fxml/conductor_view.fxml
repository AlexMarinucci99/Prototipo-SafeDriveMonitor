<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<VBox spacing="20" 
      alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.safedrivemonitor.Controller.ConductorController"
      stylesheets="@../css/styles.css"
      styleClass="conductor-root">

    <Label text="Conducente: Esegui il test" styleClass="title-label"/>
    <Label text="Inserisci ID Conducente:" styleClass="text-label"/>
    <TextField fx:id="driverIdField" promptText="ID Conducente" styleClass="text-field"/>
    
    <Button text="Esegui Test" onAction="#onExecuteTest" styleClass="primary-button"/>

    <Label fx:id="testResultLabel" text="" styleClass="result-label"/>
    <Label fx:id="vehicleStatusLabel" text="" styleClass="result-label"/>
    <Label fx:id="authorityLabel" text="" style="-fx-font-size:12px; -fx-text-fill:red;" />
</VBox>
